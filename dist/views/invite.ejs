<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head'); %>
  <script type="text/javascript" src="/js/confirmButtonPress.js"></script>
</head>

<body>

  <%- include('./partials/nav'); %>

  <h3 class=" p-5 font-bold text-2xl text-center">
    Kinder Abmelden
  </h3>

  <% for(let i = 0; i < receivers.length; i++) { %>
  <form action="/invite" method="POST" target="frame">
    <input type="text" name="name" value="<%= validate.capitalize(receivers[i].name) %>" readonly>
    <input type="text" name="mail" value="<%= receivers[i].mail %>" readonly>
    <input type="text" name="id" value="<%= id %>" readonly hidden>
    <button class=" border-2 rounded-full py-2 px-4 " type="submit" id="save" onclick="confirmSave()">Abmelden</button>
  </form>
  <% } %>



</body>
<footer>
  <%- include('./partials/footer'); %>
</footer>

</html>