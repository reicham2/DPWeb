<!DOCTYPE html>
<html>

<head>
  <%- include('./partials/head'); %>

</head>

<body>

  <%- include('./partials/nav'); %>

  <h3 class=" text-2xl text-center p-2 font-bold">
    Error
    <%= errorcode  %>
  </h3>

  <% if (message) { %>
    <div class="mx-4 my-2 p-2 bg-red-800 rounded">
      <strong>Message:</strong>
      <div><%= message %></div>
    </div>
  <% } %>

  <% if (stack) { %>
    <div class="mx-4 my-2 p-2 bg-gray-800 rounded">
      <strong>Stack:</strong>
      <pre style="white-space: pre-wrap;"><%= stack %></pre>
    </div>
  <% } %>

</body>

</html>