<div class="col-span-12 gap-3">
  <!-- first row: Title | Time | Responsible | Remove -->
  <div class="grid grid-cols-12 gap-3 items-start">
    <div class="col-span-12 sm:col-span-7">
      <label class="block text-xs font-semibold text-gray-200 mb-1">Programmpunkt</label>
      <input name="program_title" type="text" required
             class="w-full rounded-md bg-white/10 border border-white/10 px-3 py-2 text-sm text-white placeholder:text-gray-400 focus:outline-2 focus:outline-offset-2 focus:outline-indigo-500"
             placeholder="Titel" />
    </div>

    <div class="col-span-6 sm:col-span-2">
      <label class="block text-xs font-semibold text-gray-200 mb-1">Zeit</label>
      <input name="program_time" type="time" required
             class="w-full rounded-md bg-white/10 border border-white/10 px-3 py-2 text-sm text-white placeholder:text-gray-400 focus:outline-2 focus:outline-offset-2 focus:outline-indigo-500"
             placeholder="z.B. 10:00" />
     </div>

    <div class="col-span-6 sm:col-span-2">
      <label class="block text-xs font-semibold text-gray-200 mb-1">Verantwortlich</label>
      <input name="program_responsible" type="text" required
             class="w-full rounded-md bg-white/10 border border-white/10 px-3 py-2 text-sm text-white placeholder:text-gray-400 focus:outline-2 focus:outline-offset-2 focus:outline-indigo-500"
             placeholder="Name" />
    </div>

    <div class="col-span-12 sm:col-span-1 flex items-start justify-end">
      <button type="button" class="remove-program text-gray-300 hover:text-white text-lg leading-none px-2 mt-6" aria-label="Programmpunkt entfernen">âœ•</button>
    </div>
  </div>

  <!-- second row: Details full width -->
  <div class="mt-3">
    <textarea name="program_description" rows="2"
              class="w-full rounded-md bg-white/10 border border-white/10 px-3 py-2 text-sm text-white placeholder:text-gray-400 focus:outline-2 focus:outline-offset-2 focus:outline-indigo-500"
              placeholder="Details"></textarea>
  </div>
</div>